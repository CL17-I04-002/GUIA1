<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tx_guia"
        android:layout_width="169dp"
        android:layout_height="36dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="16dp"
        android:text="@string/guia"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/calculadora"
        android:layout_width="227dp"
        android:layout_height="37dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/purple_700"
        android:onClick="RedireccionarCalculadora"
        android:text="@string/calculadora"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tx_guia"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/login"
        android:layout_width="229dp"
        android:layout_height="36dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/purple_700"
        android:onClick="RedireccionarLogin"
        android:text="@string/login"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculadora"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/datos"
        android:layout_width="229dp"
        android:layout_height="36dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="48dp"
        android:onClick="RedireccionarMisDatos"
        android:backgroundTint="@color/purple_700"
        android:text="@string/datos"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>